{
    "name": "assistant-zvs",
    "private": true,
    "version": "0.1.0",
    "description": "Desktop AI assistant with project chats, tools, and vector storage.",
    "author": "ZVS Team",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "typecheck": "tsc --noEmit && tsc --project tsconfig.node.json --noEmit",
        "build:app": "vite build",
        "build": "npm run typecheck && npm run build:app && electron-builder",
        "release:win": "npm run typecheck && npm run build:app && electron-builder --win --x64",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "deps:rebuild": "npx electron-rebuild -f -w better-sqlite3",
        "preview": "vite preview"
    },
    "dependencies": {
        "@iconify/react": "^6.0.2",
        "@lancedb/lancedb": "^0.26.2",
        "@mistralai/mistralai": "^1.9.10",
        "@tanstack/react-query": "^5.90.21",
        "axios": "^1.13.5",
        "better-sqlite3": "^12.6.2",
        "mammoth": "^1.11.0",
        "mobx": "^6.15.0",
        "mobx-react-lite": "^4.1.1",
        "ollama": "^0.6.3",
        "pdf-parse": "^2.4.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^10.1.0",
        "react-router-dom": "^7.13.0",
        "remark-gfm": "^4.0.1",
        "shiki": "^3.22.0",
        "utf-8-validate": "^6.0.6"
    },
    "devDependencies": {
        "@tailwindcss/postcss": "^4",
        "@types/better-sqlite3": "^7.6.13",
        "@types/react": "^18.2.64",
        "@types/react-dom": "^18.2.21",
        "@typescript-eslint/eslint-plugin": "^7.1.1",
        "@typescript-eslint/parser": "^7.1.1",
        "@vitejs/plugin-react": "^4.2.1",
        "electron": "^40.4.1",
        "electron-builder": "^26.7.0",
        "eslint": "^8.57.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "tailwindcss": "^4",
        "typescript": "^5.2.2",
        "vite": "^7.3.1",
        "vite-plugin-electron": "^0.28.6",
        "vite-plugin-electron-renderer": "^0.14.5"
    },
    "main": "dist-electron/main.js",
    "optionalDependencies": {
        "bufferutil": "^4.1.0"
    }
}
